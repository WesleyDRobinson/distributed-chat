{
  "name": "distributed-chat",
  "version": "0.9.3",
  "description": "a realtime-only, transparent, ephemeral, private, p2p chat client and IPFS file uploader",
  "dependencies": {
    "blob-to-buffer": "^1.2.7",
    "document-register-element": "^1.11.0",
    "express": "^4.16.3",
    "hyperhtml-element": "^3.1.0",
    "ipfs-pubsub-room": "^1.4.0",
    "page": "^1.10.2",
    "serve": "^10.0.2"
  },
  "devDependencies": {
    "now": "^11.5.2",
    "npm-run-all": "^4.1.2",
    "webpack": "^4.21.0",
    "webpack-cli": "^3.1.2",
    "webpack-merge": "^4.1.4"
  },
  "scripts": {
    "build": "webpack --config ./config/webpack.prod.js",
    "build:watch": "webpack -w --config ./config/webpack.dev.js",
    "deploy": "yarn build && now",
    "deploy:static": "npm run build && now --static ./public -n distributed-chat --public",
    "dev": "npm-run-all -p build:watch dev:start",
    "dev:start": "serve --single",
    "release": "yarn version && now alias"
  },
  "author": "wesley",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git@github.com:WesleyDRobinson/distributed-chat.git"
  }
}
